@model Pari.Models.Bet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Новая ставка</h1>

<h4>Ставка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" class ="form-control" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BetAmount" class="control-label"></label>
                <input asp-for="BetAmount" class="form-control" />
                <span asp-validation-for="BetAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningsAmount" class="control-label"></label>
                <input asp-for="WinningsAmount" class="form-control" />
                <span asp-validation-for="WinningsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SettlementDate" class="control-label"></label>
                <input asp-for="SettlementDate" class="form-control" />
                <span asp-validation-for="SettlementDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>