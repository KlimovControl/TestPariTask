@model IEnumerable<Pari.Models.Bet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ставки</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player.AbbriviatedFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WinningsAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SettlementDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player.AbbriviatedFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningsAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettlementDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>