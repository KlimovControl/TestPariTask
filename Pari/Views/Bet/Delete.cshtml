@model Pari.Models.Bet

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить ставку?</h3>
<div>
    <h4>Bet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Player.AbbriviatedFullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player.AbbriviatedFullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BetAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BetAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BetDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BetDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WinningsAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WinningsAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SettlementDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SettlementDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>